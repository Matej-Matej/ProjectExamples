<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_activity_cell_star_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_activity_cell_star_empty" />

        <ImageView
            android:id="@+id/iv_activity_cell_star_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_activity_cell_star_empty" />

        <ImageView
            android:id="@+id/iv_activity_cell_star_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_activity_cell_star_empty" />

        <ImageView
            android:id="@+id/iv_activity_cell_star_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_activity_cell_star_empty" />

        <ImageView
            android:id="@+id/iv_activity_cell_star_5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_activity_cell_star_empty" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_cell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:text="Nadpis"
        android:textColor="#3C3C3C"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_activity_cell_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="37dp"
        android:text="TextView"
        android:textColor="#3C3C3C" />

    <TextView
        android:id="@+id/tv_activity_cell_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="14dp"
        android:text="TextView"
        android:textColor="#3C3C3C" />

</RelativeLayout>